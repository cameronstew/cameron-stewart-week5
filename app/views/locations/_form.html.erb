
<%= form_for @location do |f| %>

<div class="form-group row">
  <div class="field">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="form-controls col-md-4">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="field">
    <%= f.label :address, :class => 'control-label col-md-2' %>
    <div class="form-controls col-md-4">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="field">
    <%= f.label :zipcode, :class => 'control-label col-md-2' %>
    <div class="form-controls col-md-4">
      <%= f.text_field :zipcode, :class => 'form-control' %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="col-md-offset-2 col-md-4">
    <% if @location.id == nil %>
      <%= f.submit 'Create Location', :class => 'btn btn-primary' %>
    <% else %>
      <%= f.submit 'Update Location', :class => 'btn btn-primary' %>
      <%= link_to 'Delete Location', @location, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    <a class="btn btn-default" href="/locations">Cancel</a>
  </div>
</div>
<% end %>

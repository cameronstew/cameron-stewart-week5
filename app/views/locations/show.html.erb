
<div class="page-header">

  <div class="pull-right">
    <%= link_to 'Edit Location', edit_location_path(@location), class: "btn btn-info" %>
    <%= link_to 'Delete Location', @location, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Create Event', new_location_event_path(@location), class: "btn btn-info" %>
  </div>
  <h1>  <%= @location.name %> </h1>
</div>


<div class="row">
  <span><strong> Name:</strong> </span>
  <%= @location.name %>
</div>
<div class="row">
  <span><strong> Address:</strong> </span>
  <%= @location.address %>
</div>

<div class="row">
  <span> <strong>Zipcode: </strong></span>
  <%= @location.zipcode %>
</div>
<p class="row"> <strong>Events: </strong></p>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th> Event Description</th>
      <th>Date</th>
      <th>ID Required</th>
    </tr>
  </thead>
  <tbody>
    <% @location.events.each do |event| %>
    <tr>
      <td><%= link_to event.description, location_event_path(@location, event) %></td>
      <td><%= event.date %></td>
      <td><%= event.requires_id %></td>
      <td class="text-right">
        <%= link_to 'Edit', edit_location_event_path(@location, event), class: "btn btn-info" %>
        <%= link_to 'Delete', location_event_path(@location, event), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>

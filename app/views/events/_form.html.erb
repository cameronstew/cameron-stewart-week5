<%= form_for [@location, @event] do |f| %>

<div class="form-group row">
  <div class="field">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="form-controls col-md-4">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="field">
    <%= f.label :date, :class => 'control-label col-md-2' %>
    <div class="form-controls col-md-4">
      <%= f.date_field :date, :class => 'form-control' %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="field">
    <%= f.label :requires_id, "Requires ID", :class => 'control-label col-md-2' %>
    <div class="form-controls col-md-4">
      <%= f.check_box :requires_id %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="col-md-offset-2 col-md-4">
    <% if @event.id == nil %>
    <%= f.submit 'Create Event', :class => 'btn btn-primary' %>
    <a class="btn btn-default" href="/events">Cancel</a>
    <% else %>
    <%= f.submit 'Update Event', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', location_path(@location), class: "btn btn-default" %>
    <% end %>
  </div>
</div>
<% end %>
